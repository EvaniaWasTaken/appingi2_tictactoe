<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="53dp"
            android:id="@+id/score_player_name" app:layout_constraintEnd_toStartOf="@+id/image"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="34dp" app:srcCompat="@drawable/ic_thumb_up"
            tools:layout_editor_absoluteY="45dp" android:id="@+id/image"
            app:layout_constraintEnd_toStartOf="@+id/date" android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="53dp"
            android:id="@+id/date" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"/>
</android.support.constraint.ConstraintLayout>