<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="368dp"
            android:layout_height="58dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">
        <TextView
                android:text="Player Turn :"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/textView4" android:layout_weight="1"/>
        <TextView
                android:text="X (Guest)"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/textView5" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="368dp"
            android:layout_height="69dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/linearLayout2">
        <TextView
                android:text="Player Turn :"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/textView6" android:layout_weight="1"/>
        <TextView
                android:text="O (Name)"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/game_player_name" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="158dp"
            android:layout_height="166dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="1dp">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="?attr/colorAccent"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView1"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="?attr/colorAccent"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView2"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="?attr/colorAccent"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView3"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" android:layout_margin="1dp">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="?attr/colorAccent"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView4"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="?attr/colorAccent"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView5"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="?attr/colorAccent"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView6"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="1dp">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="?attr/colorAccent"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView7"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="?attr/colorAccent"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView8"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="?attr/colorAccent"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView9"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>